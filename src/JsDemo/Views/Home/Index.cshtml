@{
    ViewBag.Title = "Home Page";
    this.Layout = null;
    var date = new DateTime(2021, 1, 12, 12, 1, 2);
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <script src="~/Content/libs/JQuery/jquery-1.10.2.js"></script>
    <script src="~/Content/libs/MyClock/MyClock.js"></script>
    <script>
        //var systemDate = new Date('2019-2-17 12:20:00');
        $(document).ready(function() {
            var systemDate = new Date('@date');
            var helper = MyClock.init(systemDate, 'myServerClock', { withDayOfWeek: true, withDate: true, withColor: true });
            helper.beginTick();
        });
    </script>
</head>
<body>
    <h2 id="myServerClock"></h2>
</body>
</html>
